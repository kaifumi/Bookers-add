<div class="row">
  <div class="col-xs-8 col-xs-offset-4">
    <div class="search">
      <%= form_tag(search_path,:method => 'get') do %>
        <%= text_field_tag :search_word %>
        <%= select_tag 'search_table', options_for_select({User: 1, Book: 2}, 2) %>
        <%= select_tag 'search_method', options_for_select({"完全一致": 1, "前方一致": 2, "後方一致":3, "部分一致":4}, 4) %>
        <%= submit_tag '検索', :name => nil %>
      <% end %>
    </div>
</div>