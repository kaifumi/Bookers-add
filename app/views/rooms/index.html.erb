
<table class="table table-hover">
  <thead>
    <h2>メッセージ一覧</h2>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <td>
        <% if room.target_user(current_user).present? %>
          <%= link_to room.target_user(current_user).name, room_messages_path(room)%>
        <% end %>
      </td>
    <% end %>
  </tbody>
</table>
