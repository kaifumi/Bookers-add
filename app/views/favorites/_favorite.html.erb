<% if current_user.already_favorited?(book) %>
  <%= link_to book.favorited_users.count, book_favorites_path(book), method: :delete ,class: 'fas fa-kiss-wink-heart favorite', remote: true%>
<% else %>
  <%= link_to book.favorited_users.count, book_favorites_path(book), method: :post ,class: 'far fa-kiss-wink-heart', remote: true%>
<% end %>